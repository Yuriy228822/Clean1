<Window x:Class="Clean.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="250" Width="300">
    <Grid Margin="20">
        <Label Content="Логин:" VerticalAlignment="Center" HorizontalAlignment="Left"/>
        <TextBox Name="txtUsername" VerticalAlignment="Center" HorizontalAlignment="Right" Width="150"/>

        <Label Content="Пароль:" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,40,0,0"/>
        <PasswordBox Name="txtPassword" VerticalAlignment="Center" HorizontalAlignment="Right" Width="150" Margin="0,40,0,0"/>

        <Button Content="Войти" Width="80" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,10,0,0" Click="LoginButton_Click"/>
    </Grid>
</Window>
